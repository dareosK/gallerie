<div class="container-fluid d-flex mt-5">
	<div class="col-8 m-2">
		<div class="panny ml-2" style="width: fit-content;">

		</div>
	</div>
</div>

<div class="col-12 " style="position:relative; width: 100vw; height: 100vh;">>
  <div class="col-8 d-flex">
    <% @artworks.each do |artwork| %>
        <%= cl_image_tag(artwork.photo.key, transformation: { width: 100, crop: 'fit'})%>
    <% end %>
  </div>
  <div class="col-4 d-flex">
    <% @panel_artworks.each do |panel_artwork| %>
      <div class="p-3 artwork" style="width: fit-content; position: absolute; top: <%= panel_artwork.x %>px; left: <%= panel_artwork.y %>px; ">
        <%= cl_image_tag(panel_artwork.photo.key, width: "#{panel_artwork.width}px" )%>
        <div style="height: 100%; width: 100%; position: relative;" id="resize-icon">
          <div class="resize-icon" style=" width:20px; height:20px; background-color: gray; position: absolute; bottom: 0; right: 0;"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
