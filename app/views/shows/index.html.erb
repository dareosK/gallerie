<%= render 'shared/hero' %>

<div class="featured-artshows-text" style="text-align: center; width: 100%; margin-bottom: 3.5rem; margin-top: 5rem;">
  <h1>Featured Artshows</h1>
</div>

<div class="flick-carousel data-flickity">
    <% @shows.each do |s| %>
      <div class="carousel-cell mr-1">
        <%= link_to show_path(s.id) do %>
        <div id="poster">
          <%= cl_image_tag(s.photo.key, width: 300) %>
        </div>
        <% end %>
      </div>
    <% end %>
</div>

<div class="recent-artshows-text">
<h1>Recent Artshows</h1>
</div>

<div class='container-fluid'>
  <div class='masonry-grid potato'>
    <% @shows.reverse_each do |s| %>
      <div class='masonry-grid-item'>
      <%= link_to show_path(s.id) do %>
        <div class='card-masonry'>
          <div class="show-hover layer">
            <%= cl_image_tag(s.photo.key) %>
            <div class="d-flex align-items-end show-info pl-2">
              <p><%= s.title  %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
