<div class="container d-flex mt-5">
	<div class="col-4">
		<div class="m-3">
			<div class="profile">
				<div class="flex-item"><h3><%=@user.name %></h3></div> 
				<div class="flex-item"><img src="https://source.unsplash.com/0G2ZxV31kk4" alt="photo" style="width:200px; margin-top: 5px; margin-bottom: 8px"></div>
				<div class="flex-item"><h4>Profile</h4></div>
        <div class="flex-item" style="text-align: left; color: grey; font-size:14px; margin-bottom: 8px; margin-top: 8px;"><%=@user.bio%></div>
        <div class="flex-item"><h4>Email</h4></div>
        <div class="flex-item" style="color:lightgrey"><%=@user.email %></div>
				<div class="flex-item"><h4>Social Media</h4></div>
        <div class="flex-item" style="color:grey">
					<i class="fab fa-instagram"></i>
					<i class="fab fa-twitter"></i>
					<i class="fab fa-facebook-square"></i>
				</div>
			</div>
		</div>
	</div>

	<div class="col-8">
		<div class="m-3">

			<ul class="nav nav-tabs" id="myTab" role="tablist">
			  <li class="nav-item">
			    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true" style="color:black">Shows</a>
			  </li>
			  <li class="nav-item">
			    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false" style="color:black">Writings</a>
			  </li>
			</ul>

			<div class="tab-content" id="myTabContent">
  			<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
  				<%#= link_to '[+]', new_show_path,  {remote: true, 'data-toggle' =>  'modal', 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'}  %>
  				<%  if user_signed_in? %>
  				<div class="d-flex justify-content-end m-3"><button type="button" class="btn btn-primary btn-lg btn_add_show" data-toggle="modal" data-target="#newShow">[+]</button></div>
				<% end  %>
  				
  			<% @shows.each do |s| %>
  				<%= link_to show_path(s) do %>
					<div class="card-product">
					  <%= image_tag(s.photo, size: "260x180")%>
					  <div class="card-product-infos">
					    <h5><%= s.title %></h5>
					    <p><%#= show.statement %></p>
					    <%# if (user_signed_in? && (current_user.id == @job.user_id))
    = link_to "Edit", edit_job_path(@job), class: "btn btn-sm btn-default"%>
					  </div>
					</div>
					<% end %>
					<% end %>
		   	</div>
		  	<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
		  	<% @writing.each do |write| %>
		  		<div class="card-writing">
			  		<div style="text-align: center;">
			  			<h5><%= write.title %></h5>
				  		<%=  write.publishing_date %>
					  	<br>
					  	from <strong><%=  write.publisher %></strong>
					  	<%#=  write.article %>
			  		</div>
		  		</div>
		  		<% end  %>
		  	</div>
		</div>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="newShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">x</button>
		<h4 class="modal-title" id="myModalLabel"></h4>
		</div>
		<div class="modal-body">
			<h1>Create a new Show</h1>

			<%= simple_form_for(@show) do |f| %>
			  <%= f.input :title %>
			  <%= f.input :photo, as: :file %>
				<div class="modal-footer">
				  <%= f.submit class: 'btn btn-primary' %>
				</div>
			<% end %>
    </div>
  	</div>
	</div>
</div>



