<div class="container d-flex mt-5">
	<div class="col-4">
		<div class="m-3">
			<div class="profile">
				<%=current_user.name %>
				<img src="https://images.unsplash.com/photo-1531746020798-e6953c6e8e04?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" alt="photo" style="border-radius: 50%; width:200px; margin-top: 5px;">
				<%=current_user.email %>
				<div class="mb-5"><%=current_user.bio %></div>
			</div>
		</div>
	</div>

	<div class="col-8">
		<div class="m-3">

			<ul class="nav nav-tabs" id="myTab" role="tablist">
			  <li class="nav-item">
			    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true" style="color:black">Shows</a>
			  </li>
			  <li class="nav-item">
			    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false" style="color:black">Writings</a>
			  </li>
			</ul>

			<div class="tab-content" id="myTabContent">
  			<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
  				<%#= link_to '[+]', new_show_path,  {remote: true, 'data-toggle' =>  'modal', 'data-target' => '#modal-window', class: 'btn btn-primary btn-lg'}  %>
  				<%  if user_signed_in?%>
				    <button type="button" class="btn btn-primary btn-lg btn-default" data-toggle="modal" data-target="#newShow">[+]</button>
				<% end  %>
  				
  			<% @shows.each do |s| %>
				<div class="card-product">
				  <%= image_tag(s.photo, size: "260x180")%>
				  <div class="card-product-infos">
				    <h5><%= s.title %></h5>
				    <%= link_to "show", show_path(s)%>
				    <p><%#= show.statement %></p>
				  </div>
				</div>
			<% end %>
		   </div>
		  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
		  	<% @writing.each do |write| %>
		  		<div class="card-writing">
			  		<div style="text-align: center;">
			  			<h5><%= write.title %></h5>
				  		<%=  write.publishing_date %>
					  	<br>
					  	from <strong><%=  write.publisher %></strong>
					  	<%#=  write.article %>
			  		</div>
		  		</div>
		  	<% end  %>
		  </div>
		</div>
		</div>
	</div>
</div>


<!-- Button trigger modal -->

<!-- Modal -->
<div class="modal fade" id="newShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">x</button>
		<h4 class="modal-title" id="myModalLabel"></h4>
		</div>
		<div class="modal-body">
			<h1>Create a new Show</h1>

			<%= simple_form_for(@show) do |f| %>
			  <%= f.input :title %>
			  <%= f.input :photo, as: :file %>
			<div class="modal-footer">
			  <%= f.submit class: 'btn btn-primary' %>
			</div>
		<% end %>
    </div>
  </div>
</div>


